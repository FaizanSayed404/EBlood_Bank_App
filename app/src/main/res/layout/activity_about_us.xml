<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    >

    <include layout="@layout/collapsing_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="3dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                app:strokeColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-Blood Bank"
                        android:textSize="22sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-Blood Bank is a revolutionary app designed to connect blood donors with seekers efficiently. Our platform ensures transparency, security, and reliability in blood donation using blockchain technology."
                        android:textSize="16sp"
                        android:lineSpacingExtra="2dp"
                        android:paddingStart="12dp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="3dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                app:strokeColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Mission"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingStart="12dp"
                    android:textColor="@android:color/black"
                    android:paddingTop="8dp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We aim to eliminate blood shortages by making donations seamless and transparent. Our goal is to connect willing donors with those in urgent need while maintaining security and efficiency."
                    android:textSize="16sp"
                    android:paddingStart="12dp"
                    android:paddingBottom="12dp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/black"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="3dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                app:strokeColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key Features"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u2714 Find nearby blood donors in real-time\n\u2714 Request blood instantly\n\u2714 Secure blockchain-based donation tracking\n\u2714 Live donor location map"
                    android:textSize="16sp"
                    android:paddingStart="12dp"
                    android:paddingBottom="12dp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/black"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="3dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                app:strokeColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How It Works"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Register as a donor or seeker\n2. Find donors in your area\n3. Request or donate blood with ease\n4. Track donation history securely"
                    android:textSize="16sp"
                    android:paddingStart="12dp"
                    android:paddingBottom="12dp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/black"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="3dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                app:strokeColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:paddingTop="8dp"
                        android:paddingStart="12dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:id="@+id/emailAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📧  Email: faizansayed675@gmail.com"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="12dp"
                        android:paddingBottom="6dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/phoneAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📞  Phone: +91 XXXXX XXXXX"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:clickable="true"
                        android:paddingBottom="6dp"
                        android:paddingStart="12dp"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/websiteAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🌍  Website: www.ebloodbank.com"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="12dp"
                        android:paddingBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developed by: Faizan Sayed"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="18dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
